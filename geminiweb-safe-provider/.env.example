# Encryption key for credentials at rest (32 urlsafe-base64 bytes).
# Generate once:
#   python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
CREDENTIALS_FERNET_KEY=

# Official API key (choose one approach)
GOOGLE_API_KEY=
VERTEX_PROJECT_ID=
VERTEX_LOCATION=us-central1

# Upstream hardening
UPSTREAM_TIMEOUT_SECONDS=60
UPSTREAM_MAX_ATTEMPTS=3
UPSTREAM_BACKOFF_INITIAL_SECONDS=0.5
UPSTREAM_BACKOFF_MAX_SECONDS=8.0
UPSTREAM_CIRCUIT_BREAKER_FAILURES=5
UPSTREAM_CIRCUIT_BREAKER_RESET_SECONDS=30

# Metrics
ENABLE_METRICS=false
METRICS_BIND=127.0.0.1
METRICS_PORT=9109

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Server hardening
# If set, require `Authorization: Bearer $SERVER_AUTH_TOKEN` (or `X-API-Key`) for `/v1/*`.
SERVER_AUTH_TOKEN=
ENABLE_API_DOCS=false
ALLOWED_HOSTS=
CORS_ALLOW_ORIGINS=
CORS_ALLOW_CREDENTIALS=false
MAX_REQUEST_BODY_BYTES=1048576
MAX_INFLIGHT_REQUESTS=32
MAX_MESSAGES=64
MAX_TOTAL_MESSAGE_CHARS=20000
CHAT_COMPLETIONS_TIMEOUT_SECONDS=90
CHAT_COMPLETIONS_STREAM_IDLE_TIMEOUT_SECONDS=30
CHAT_COMPLETIONS_STREAM_TOTAL_TIMEOUT_SECONDS=300

# Milestone 2 (optional)
ENABLE_STREAMING=false
